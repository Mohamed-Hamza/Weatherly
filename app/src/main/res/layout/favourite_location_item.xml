<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="4dp"
    app:contentPadding="4dp"
    app:strokeWidth="0dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Cairo, Egypt"
            android:textColor="@color/sub_heading_black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/city_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="4:23 PM"
            android:textColor="@color/quantum_grey"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/city_name"

            app:layout_constraintTop_toBottomOf="@id/city_name" />

        <ImageView
            android:id="@+id/favourite_location_flag"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/egypt"
            app:layout_constraintBottom_toBottomOf="@+id/city_name"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/city_name"
            app:layout_constraintTop_toTopOf="@+id/city_name" />


        <ImageView
            android:id="@+id/favourite_location_alert"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginVertical="4dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/favourite_location_alert_icon" />

        <ImageView
            android:id="@+id/favourite_location_delete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/delete"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="4dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="4dp"
    app:contentPadding="4dp"
    app:strokeWidth="0dp"

    >
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_gravity="center_vertical"

    >


    <ImageView
        android:id="@+id/location_flag"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/egypt"
        app:layout_constraintBottom_toBottomOf="@+id/location_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/location_name" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="10th of Ramadan City"
        android:textColor="@color/sub_heading_black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/location_flag"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/alert_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/alarm"
        app:layout_constraintStart_toStartOf="@id/location_flag"
        android:layout_marginTop="4dp"

        app:layout_constraintTop_toBottomOf="@id/location_name"
        />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginStart="4dp"
        android:text="14 JULY"
        android:textColor="@color/quantum_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/alert_icon"
        app:layout_constraintStart_toEndOf="@+id/alert_icon"
        app:layout_constraintTop_toTopOf="@+id/alert_icon" />

    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="-"
        android:textColor="@color/quantum_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/alert_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/start_date"
        app:layout_constraintTop_toTopOf="@+id/alert_icon" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="5 AUG"
        android:textColor="@color/quantum_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/alert_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dash"
        app:layout_constraintTop_toTopOf="@+id/alert_icon" />

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/delete"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/end_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/location_name" />







</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>